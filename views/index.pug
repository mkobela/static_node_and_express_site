extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 JavaScript full stack projects
 
      p.lead.text-light
        | This portfolio is designed to display the skills learned in the JavaScript full stack currriculm
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      // iterate for each project, display images and create links
      each project in projects
        .cell
            a(href=`project/${project.id}`)
              img.thumbnail(src=`${project.images_urls[0]}`)
              h5= `${project.project_name}`
